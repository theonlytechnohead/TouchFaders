            <ProgressBar x:Name="faderChannel12" Grid.Row="1" Maximum="1" Orientation="Vertical" Grid.Column="11" Style="{StaticResource FaderProgressBar}" />
            <ProgressBar x:Name="faderChannel13" Grid.Row="1" Maximum="1" Orientation="Vertical" Grid.Column="12" Style="{StaticResource FaderProgressBar}" />
            <ProgressBar x:Name="faderChannel14" Grid.Row="1" Maximum="1" Orientation="Vertical" Grid.Column="13" Style="{StaticResource FaderProgressBar}" />
            <ProgressBar x:Name="faderChannel15" Grid.Row="1" Maximum="1" Orientation="Vertical" Grid.Column="14" Style="{StaticResource FaderProgressBar}" />
            <ProgressBar x:Name="faderChannel16" Grid.Row="1" Maximum="1" Orientation="Vertical" Grid.Column="15" Style="{StaticResource FaderProgressBar}" />
        </Grid>

    </Grid>
</Window>
    